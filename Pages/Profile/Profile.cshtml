@page "/profile"
@model PRN221_Assignment.Pages.Profile.ProfileModel
@{
}
<div class="page">
    <div class="main">
        <div class="profile">
            <div class="left">
                <div class="username">Sát thủ đa tình</div>
                <div class="fullname">giu_giot_le_sau</div>
                <div class="story">ghét rán cá, thích uống rịu 🍶</div>
                <a href="" class="followers">50 followers</a>
            </div>
            <div class="right">
                <avatar-user data-custom-class="custom-option-box" class="avatar">
                    <div class="option-box hide">
                        <div class="new-avt">Upload new avatar</div>
                        <div class="divider"></div>
                        <div class="delete-avt">Delete avatar</div>
                    </div>
                </avatar-user>
            </div>
        </div>
        <edit-info-box data-custom-class="custom-edit-info-box" class="btn-edit">
            Edit profile
            <div class="edit-info-box hide">
                <form action="">
                    <div class="row">
                        <div class="label">Fullname</div>
                        <input class="info username" value="Sát thủ đa tình" />
                    </div>
                    <div class="seperate-line"></div>
                    <div class="row">
                        <div class="label">Username</div>
                        <input class="info fullname" value="giu_giot_le_sau"/>
                    </div>
                    <div class="seperate-line"></div>
                    <div class="row">
                        <div class="label">Biography</div>
                        <input class="info story" value="ghét rán cá, thích uống rịu 🍶"/>
                    </div>
                    <div class="seperate-line"></div>
                    <div class="row-private">
                        <div class="label">Private account</div>
                        <btn-private class="btn-private">
                            <div class="btn-ball"></div>
                        </btn-private>
                    </div>
                    <div class="btn-edit-info">Xong</div>
                </form>
            </div>
        </edit-info-box>
        <div class="tabs">
            <div class="tab-left selected">
                <div class="up">Thread</div>
            </div>
            <div class="tab-right">
                <div class="share">Re-thread</div>
            </div>
            <div class="selected-line"></div>
        </div>
        <div class="line"></div>
        <!-- Created Threads -->
        <!--Thread 1-->
