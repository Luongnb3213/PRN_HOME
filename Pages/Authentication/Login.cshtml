                </div>
                <div class="big-box">
                   
                    <form method="post" class="flex align-center flex-column">
                       
                        <input type="email" class="input email" asp-for="Input.Email" placeholder="Username">
                        <input type="password" required class="input password" asp-for="Input.Password" placeholder="Password">
                        @if (!ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <ul>
                                    @foreach (var key in ModelState.Keys)
                                    {
                                        foreach (var error in ModelState[key].Errors)
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    }
                                </ul>
                            </div>
                        }
                        <button type="submit"  class="btn btn-login">Login</button>
                       
                    </form>
                    <div class="divider">
                        <span>OR</span>
                    </div>
                    <a  asp-page-handler="Logingoogle" class="btn btn-google">
                        <i class="fab fa-google fa-3x"></i>
                        <span>Login with Google</span>
                    </a>
                   
                    <div class="forgot-password">
                        <a href="/authentication/forgotpassword">Forgot password?</a>
                    </div>
                
                </div>
                <div class="small-box">
                    <a href="/authentication/signup">Create new account</a>
                </div>
